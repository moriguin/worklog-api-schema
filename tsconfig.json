{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./ts",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["ts/**/*"],
  "exclude": ["node_modules"]
}
